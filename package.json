{
	"name": "@labor-digital/helferlein",
	"version": "3.30.1",
	"description": "General purpose Javascript helpers",
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com:labor-digital/helferlein.git"
	},
	"scripts": {
		"build": "node flushLib.js && tsc && tsc --project ./tsconfig.cjs.json && tsc --project ./tsconfig.esm.json",
		"watch": "node flushLib.js && tsc --watch",
		"test": "jest",
		"doc": "typedoc --out doc --tsconfig ./tsconfig.json src --module commonjs && echo helferlein.labor.tools >> doc/CNAME && touch doc/.nojekyll"
	},
	"main": "dist/cjs/index.js",
	"module": "dist/esm/index.js",
	"typings": "dist/types/index.d.ts",
	"engines": {
		"node": ">=8.11.2",
		"npm": ">=6.3.0"
	},
	"sideEffects": false,
	"author": "Martin Neundorfer",
	"license": "Apache-2.0",
	"homepage": "https://github.com/labor-digital/helferlein",
	"dependencies": {
		"clone": "^2.1.2"
	},
	"devDependencies": {
		"@types/jest": "26.0.15",
		"@types/node": "14.14.9",
		"jest": "26.6.3",
		"ts-jest": "26.4.4",
		"typedoc": "0.19.2",
		"typescript": "4.1.2"
	}
}
